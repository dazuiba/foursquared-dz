<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/listview_item_manual" >
 
  <LinearLayout 
    android:id="@+id/tipActivityHeaderView"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:background="@drawable/header_blue"
    android:paddingLeft="5dip" 
    android:paddingRight="5dip" 
    android:paddingTop="10dip" 
    android:paddingBottom="10dip" 
    android:orientation="horizontal"
    >
    
    <LinearLayout
      android:orientation="vertical"
      android:layout_width="0dip"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingLeft="8dip" >
       
      <TextView 
        android:id="@+id/tipActivityName" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextViewStyleTipActivityTitle"
        android:text="@string/user_details_pings_activity_title" />
        
    </LinearLayout>
        
  </LinearLayout>
  
  <LinearLayout 
    android:layout_width="fill_parent" 
    android:layout_height="8dip"
    android:background="@color/color_bright_green"
    >
  </LinearLayout>
  
  <LinearLayout 
    android:layout_width="fill_parent" 
    android:layout_height="0dip"
    android:layout_weight="1"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:paddingTop="17dip"
    android:orientation="vertical" 
    >
    
    <TextView 
      android:id="@+id/userDetailsPingsActivityDescription"
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextViewStylePingsActivityBody"
      android:text="Pings are currently on for ..."  
      android:layout_marginBottom="20dip"
      />
      
    <Button
      android:id="@+id/userDetailsPingsActivityButton"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="Turn pings on"
      android:textAppearance="@style/TextViewStyleTipActivityButtons"
      android:textColor="#444"
      /> 
        
  </LinearLayout>
  
</LinearLayout>