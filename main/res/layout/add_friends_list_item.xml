<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/addFriendListItemBackground"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:gravity="center_vertical"
  android:paddingRight="12dip"
  android:paddingTop="5dip"
  android:paddingBottom="5dip"
  android:paddingLeft="10dip"
  style="@style/listItemStyle"
  >
  
  <LinearLayout
    android:id="@+id/addFriendListItemClickableArea"
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"> 
    
    <ImageView
      android:id="@+id/addFriendListItemPhoto"
	  android:layout_height="46dip"
	  android:layout_width="46dip"
      android:background="@drawable/photo_background"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:padding="3dip"
      android:src="@drawable/blank_boy"
      android:gravity="center_vertical"
      android:scaleType="fitXY" />

    <TextView
      android:id="@+id/addFriendListItemName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black_end"
      android:textAppearance="@android:style/TextAppearance.Small" 
      android:singleLine="true"
      android:ellipsize="marquee"
      android:layout_gravity="center_vertical" 
      android:paddingLeft="10dip" />
   
   </LinearLayout>  
  
  <Button
    android:id="@+id/addFriendListItemAddButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=" Add  " 
    style="@style/sendInviteStyle"
    android:drawableLeft="@drawable/add_friend" />

</LinearLayout>