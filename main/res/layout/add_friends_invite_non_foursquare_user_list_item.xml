<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/addFriendListItemBackground"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:gravity="center_vertical"
  android:paddingRight="12dip"
  android:paddingTop="5dip"
  android:paddingBottom="5dip" 
  android:paddingLeft="10dip"
  > 
    
  <LinearLayout 
    android:id="@+id/addFriendListItemClickableArea"
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"> 
    
    <TextView
      android:id="@+id/addFriendNonFoursquareUserListItemName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:singleLine="true"
      android:ellipsize="marquee"
      android:layout_gravity="center_vertical"
      android:textAppearance="@style/TextViewStyleInviteNonFoursquareUserListItem" />
      
    <TextView
      android:id="@+id/addFriendNonFoursquareUserListItemEmail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black_end"
      android:textAppearance="@android:style/TextAppearance.Small" 
      android:singleLine="true"
      android:layout_gravity="center_vertical" />
   
   </LinearLayout>  
      
  <Button
    android:id="@+id/addFriendNonFoursquareUserListItemBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Invite" 
    style="@style/sendInviteStyle"
    android:drawableLeft="@drawable/invite_contact" />
     
</LinearLayout>